@model PetSaver.Models.LostPet

@{
    ViewData["Title"] = "Perdi meu Pet";
}
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/lostpet.css" asp-append-version="true">>

    <!-- Trazer os links dos icones -->
    <script src="https://kit.fontawesome.com/7c72460651.js" crossorigin="anonymous"></script>
</head>

<body>
    <header class="header">
        <a href="#">
            <img class="logo-header" src="~/img/oficial-logo2.png" alt="Logo">
        </a>

        <nav class="navbar">
            <a href="@Url.Action("MapPet", "Map")" class="active">ENCONTRE SEU PET</a>
            <a href="#">ADOTE</a>
            <a href="#">CÃES E FILHOTES</a>
            <a href="#">OUTROS TIPOS DE ANIMAIS</a>
            <a href="#">SOBRE</a>
        </nav>
        <div class="hr-login"></div>
        <a href="../telaLoginPetSearch/index.html" class="btn">Faça Login</a>
    </header>

    <div class="container">
        <div class="container-form">
            <h2>Nos conte mais sobre o Pet</h2>
            <form asp-action="SaveLostPet" asp-controller="Map" method="post">
                <div>
                    <div class="idadeAproxim">
                        <input type="number" asp-for="ApproximateAge" min="0" placeholder="Idade aprox." />
                        <select asp-for="AgeUnit">
                            <option value="anos">Ano(s)</option>
                            <option value="meses">Mês(es)</option>
                        </select>
                    </div>
                    <p>Sexo</p>
                    <div class="sexoPet">
                        <select asp-for="Gender">
                            <option value="macho">Macho</option>
                            <option value="fem">Fêmea</option>
                        </select>
                    </div>
                    <p>Código do chip indentificador (caso houver)</p>
                    <input asp-for="ChipCode" class="ChipIdentifica" type="text" maxlength="50" />
                    <p>Descrição (nos conte mais sobre o Pet)</p>
                    <textarea asp-for="Description" class="descPet" maxlength="400"></textarea>
                    <div class="content-checkbox">
                        <input asp-for="SharePhone" type="checkbox" />
                        <label for="">Informar meu telefone de contato</label>
                    </div>
                    <div class="submitForm">
                        <button type="submit" class="button-submitForm">Concluir</button>
                    </div>
                </div>
            </form>
        </div>
    </div>





</body>
</html>