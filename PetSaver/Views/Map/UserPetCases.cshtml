@model IEnumerable<PetSaver.Models.ViewModel.UserPetCaseViewModel>
@{
    ViewData["Title"] = "Meus Casos de Pets";
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Meus Casos de Pets</title>
    <link rel="stylesheet" href="/css/index.css" asp-append-version="true">
    <style>
        .petcase-container {
            max-width: 800px;
            margin: 40px auto 0 auto;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            padding: 32px 24px 24px 24px;
            border-top: 6px solid #2563eb; /* azul forte */
        }

        .petcase-title {
            font-size: 2rem;
            font-weight: 700;
            color: #2563eb; /* azul forte */
            margin-bottom: 24px;
            text-align: center;
            letter-spacing: 1px;
        }

        .petcase-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 24px;
        }

            .petcase-table th, .petcase-table td {
                padding: 12px 8px;
                border-bottom: 1px solid #e0e0e0;
                color: #1e293b;
                text-align: left;
            }

            .petcase-table th {
                background: #e3eafe; /* azul claro */
                color: #2563eb;
                font-weight: 700;
            }

            .petcase-table tr:last-child td {
                border-bottom: none;
            }

        .case-lost {
            color: #e74c3c;
            font-weight: 600;
        }

        .case-found {
            color: #2563eb; /* azul forte */
            font-weight: 600;
        }

        .alert-info {
            background: #e3eafe;
            color: #2563eb;
            padding: 18px;
            border-radius: 8px;
            text-align: center;
            margin-bottom: 24px;
        }

        .btn-back {
            display: inline-block;
            background: #2563eb;
            color: #fff;
            padding: 10px 28px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: 600;
            transition: background 0.2s;
            margin-top: 8px;
            border: none;
        }

            .btn-back:hover {
                background: #1e40af;
            }


    </style>
</head>
<body style="background: #f5f6fa;">
    <div class="petcase-container">
        <div class="petcase-title">Meus Casos de Pets</div>
        @if (!Model.Any())
        {
            <div class="alert-info">
                Você ainda não cadastrou nenhum caso de pet perdido ou encontrado.
            </div>
        }
        else
        {
            <table class="petcase-table">
                <thead>
                    <tr>
                        <th>Tipo</th>
                        <th>Descrição</th>
                        <th>Idade</th>
                        <th>Sexo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <span class="@(item.IsLost ? "case-lost" : "case-found")">
                                    @(item.IsLost ? "Perdido" : "Encontrado")
                                </span>
                            </td>
                            <td>@item.Description</td>
                            <td>@(item.ApproximateAge.HasValue ? item.ApproximateAge + " " + item.AgeUnit : "-")</td>
                            <td>@item.Gender</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        <a href="@Url.Action("Profile", "Account")" class="btn-back"><i class="fas fa-arrow-left"></i> Voltar</a>
    </div>
</body>
</html>
