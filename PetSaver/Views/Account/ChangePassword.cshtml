@model PetSaver.Models.ViewModel.ChangePasswordViewModel
@{
    Layout = null;
    ViewData["Title"] = "Alterar Senha";
}
<link rel="stylesheet" href="/css/loginandregister.css" asp-append-version="true">

<div class="container" style="height: 480px;">
    <div class="form-box login" style="width:100%;position:relative;right:0;">
        <form asp-action="ChangePassword" method="post">
            <h1>Alterar Senha</h1>
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert-danger" style="margin-bottom:10px;">@ViewBag.ErrorMessage</div>
            }
            @if (ViewBag.SuccessMessage != null)
            {
                <div class="alert-success" style="margin-bottom:10px;">@ViewBag.SuccessMessage</div>
            }
            @Html.ValidationSummary(true, "", new { @class = "alert-danger", style = "margin-bottom:10px;" })
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="input-box">
                <input type="password" name="CurrentPassword" placeholder="Senha atual" required>
                <i class='bx bxs-lock-alt'></i>
                @Html.ValidationMessageFor(m => m.CurrentPassword, "", new { @class = "field-validation-error" })
            </div>

            <div class="input-box">
                <input type="password" name="NewPassword" placeholder="Nova senha" required>
                <i class='bx bxs-lock-alt'></i>
            </div>
            <div class="input-box">
                <input type="password" name="ConfirmPassword" placeholder="Confirme a nova senha" required>
                <i class='bx bxs-lock-alt'></i>
            </div>
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert-danger" style="margin-bottom:10px;">@ViewBag.ErrorMessage</div>
            }
            @if (ViewBag.SuccessMessage != null)
            {
                <div class="alert-success" style="margin-bottom:10px;">@ViewBag.SuccessMessage</div>
            }
            <button type="submit" class="btn">Alterar Senha</button>
            <a href="@Url.Action("Profile", "Account")" class="btn" style="margin-top:10px;background:#ccc;color:#333;">Cancelar</a>
        </form>
    </div>
</div>
