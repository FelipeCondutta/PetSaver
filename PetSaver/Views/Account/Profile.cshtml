@using System.Security.Claims
@{
    Layout = null;
    ViewData["Title"] = "Perfil";
}

<link rel="stylesheet" href="~/css/profile.css">

<main>
    <header class="header">
        <a href="@Url.Action("Index", "Home")">
            <img class="logo-header" src="~/img/oficial-logo2.png" alt="Logo">
        </a>

        <nav class="navbar">
            <a href="@Url.Action("MapPet", "Map")" class="active">ENCONTRE SEU PET</a>
            <a href="#">ADOTE</a>
            <a href="#">CÃES E FILHOTES</a>
            <a href="#">OUTROS TIPOS DE ANIMAIS</a>
            <a href="#">SOBRE</a>
        </nav>
    </header>

    <div class="container-form">
        <div class="content-title">
            <h1>Seus dados</h1>
        </div>

        <div class="content-form">
            <div class="content-info">
                <p>Nome: @User.Identity.Name</p>
                <p>E-mail: @User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Email)?.Value</p>
                <p>Telefone: @User.Claims.FirstOrDefault(c => c.Type == "phone")?.Value</p>
                <p>País: @User.Claims.FirstOrDefault(c => c.Type == "country")?.Value</p>
            </div>

            <button class="edit-profile">
                Editar
            </button>

            <div class="content-link">
                <a href="">Meus casos</a>
            </div>

            <!-- Botão para sair -->
            <form asp-action="Logout" asp-controller="Account" method="post" style="text-align: center; margin-top: 20px;">
                <button type="submit" class="edit-profile">Sair</button>
            </form>
        </div>
    </div>
</main>